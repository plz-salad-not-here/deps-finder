{
  "name": "deps-finder",
  "version": "0.2.0",
  "description": "A TypeScript dependency analyzer that detects unused and misplaced dependencies",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "deps-finder": "./bin/cli.js"
  },
  "scripts": {
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "bunx biome lint src/",
    "format": "bunx biome format --write src/",
    "format:check": "bunx biome format src/",
    "check": "bunx biome check --write src/",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "validate": "bun run typecheck && bun run lint && bun test",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "dependency",
    "analyzer",
    "typescript",
    "unused",
    "devDependencies",
    "npm",
    "package-manager",
    "bun"
  ],
  "author": "yuniithings@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/plz-salad-not-here/deps-finder.git"
  },
  "homepage": "https://github.com/plz-salad-not-here/deps-finder#readme",
  "bugs": {
    "url": "https://github.com/plz-salad-not-here/deps-finder/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "husky": "^9.1.7"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@mobily/ts-belt": "4.0.0-rc.5",
    "glob": "^11.1.0",
    "ts-pattern": "^5.9.0"
  }
}
